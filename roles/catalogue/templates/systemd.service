[Unit]
Description = Catalogue Service
[Service]
User=roboshop
Environment=MONGO_URL="mongodb://{{ mhmr }:{{secrets.DOCUMENTDB_MASTER_PASSWORD}}@{{MONGODB_ENDPOINT}}:27017/catalogue?tls=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false"
ExecStart=/bin/node /home/roboshop/catalogue/server.js
SyslogIdentifier=catalogue

[Install]
WantedBy=multi-user.target
